<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".weatherview.WeatherVpActivity">

        <Button
            android:id="@+id/id_btn_load_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="reqData"
            android:text="加载数据"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_recyclerview_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_btn_load_data"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:scrollbars="none"/>

        <View
            android:id="@+id/id_view_spilt"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/id_recyclerview_horizontal"
            android:background="@android:color/black"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_recyclerview_horizontal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_view_spilt"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:scrollbars="none"/>

    </RelativeLayout>
</ScrollView>

